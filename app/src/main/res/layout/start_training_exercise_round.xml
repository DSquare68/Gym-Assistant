<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/round"
    android:layout_width="match_parent"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="horizontal">

<EditText
    android:id="@+id/number_of_round"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_weight="2"
    android:background="@android:color/transparent"
    android:editable="false"
    android:gravity="center_vertical"
    android:text="1"
    android:textSize="@dimen/round_number" />

<LinearLayout
    android:id="@+id/values_of_round"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="15"
    android:orientation="vertical">

    <EditText
        android:id="@+id/weight"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:editable="true"
        android:gravity="center_horizontal"
        android:hint="@string/weight"
        android:inputType="numberDecimal"
        android:textSize="@dimen/add_training_exercise_weight_string" />

    <EditText
        android:id="@+id/reps"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:editable="true"
        android:gravity="center_horizontal"
        android:hint="@string/reps"
        android:inputType="numberDecimal"
        android:textSize="@dimen/add_training_exercise_reps_string" />
</LinearLayout>
</LinearLayout>
