<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.daniel.gymassistant">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Black.NoTitleBar">
        <uses-library android:name="com.android.future.usb.accessory" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Settings"
            android:label="@string/settings"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddTraining"
            android:label="@string/title_activity_add_training"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddTrainingSettings"
            android:label="@string/title_activity_add_training_settings"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".StartTraining"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Statistics"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Timetable"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".StatisticsCompareTraining"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".StatisticsCompareExercise"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Synch"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>