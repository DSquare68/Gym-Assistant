<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.daniel.gymassistant.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name_gym"
            android:textSize="50dp"
            android:textAlignment="center"
            android:textColor="@color/dark"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name_assistant"
            android:textSize="35dp"
            android:textAlignment="center"
            android:textColor="@color/dark"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="551dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_first_images"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/start_training_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="startTraining"
                app:srcCompat="@drawable/training" />

            <ImageView
                android:id="@+id/add_training_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="addTraining"
                app:srcCompat="@drawable/add_training" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <ImageView
                android:id="@+id/timetable_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:clickable="true"
                app:srcCompat="@drawable/timetable"
                android:onClick="timetableOpen"/>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/statistics_button"
                android:layout_weight="1"
                android:clickable="true"
                app:srcCompat="@drawable/progress"
                android:onClick="progressOpen"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">
            <ImageView
                android:id="@+id/synch_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="synchOpen"
                app:srcCompat="@drawable/synch" />
            <ImageView
                android:id="@+id/options_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="optionsOpen"
                app:srcCompat="@drawable/options" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
